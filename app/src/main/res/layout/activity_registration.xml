<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:text="Registration"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:id="@+id/register_name_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="50"
            />

        <EditText
            android:id="@+id/register_name_edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="enter name..."
            android:textColor="@color/endblue"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_weight="50"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_dob_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_dob_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Date of Birth"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="50"
            />

        <EditText
            android:id="@+id/register_dob_edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="choose dob"
            android:textColor="@color/endblue"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_weight="50"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/register_email_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_email_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="50"
            />

        <EditText
            android:id="@+id/register_email_edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="enter email..."
            android:textColor="@color/endblue"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_weight="50"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/register_kyc_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_mobile_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Mobile No."
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="50"
            />

        <EditText
            android:id="@+id/register_mobile_edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="enter mobile..."
            android:textColor="@color/endblue"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_weight="50"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_gender_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_gender_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Gender"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="30"
            />

        <Spinner
            android:id="@+id/register_gender_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/endblue"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_weight="70">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_kyc_type_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_kyc_type_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Kyc type"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="30"
            />


        <Spinner
            android:id="@+id/register_kyc_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/endblue"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_weight="70">

        </Spinner>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/register_kyc_details_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="460dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_kyc_details_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Kyc Number"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="50"
            />



        <EditText
            android:id="@+id/register_kyc_details_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="kyc number..."
            android:textColor="@color/endblue"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_weight="50"/>
    </LinearLayout>

    <Button
        android:id="@+id/register_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttonstyle"
        android:text="Submit"
        android:textColor="#fff" />
</RelativeLayout>