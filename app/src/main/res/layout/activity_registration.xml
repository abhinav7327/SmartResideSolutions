<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:id="@+id/RegistrationLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:text="Registration"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:id="@+id/register_name_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="33.33"
            />

        <EditText
            android:id="@+id/register_firstname_edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:hint="first name..."
            android:textAlignment="center"
            android:textColor="@color/endblue"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_weight="33.33"/>

        <EditText
            android:id="@+id/register_lastname_edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="last name"
            android:textColor="@color/endblue"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_weight="33.33"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_dob_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_dob_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Date of Birth"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="50"
            />

        <EditText
            android:id="@+id/register_dob_edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="choose dob"
            android:textColor="@color/endblue"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_weight="50"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/register_email_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_email_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="50"
            />

        <EditText
            android:id="@+id/register_email_edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Enter Email"
            android:textColor="@color/endblue"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_weight="50"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/register_kyc_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_mobile_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Mobile No."
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="50"
            />

        <EditText
            android:id="@+id/register_mobile_edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Enter Mobile No."
            android:textColor="@color/endblue"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_weight="50"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_gender_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_gender_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Gender"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="30"
            />

        <Spinner
            android:id="@+id/register_gender_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/endblue"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_weight="70">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_kyc_type_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_kyc_type_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="KYC type"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="30"
            />


        <Spinner
            android:id="@+id/register_kyc_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/endblue"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_weight="70">

        </Spinner>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/register_kyc_details_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="460dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/register_kyc_details_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="KYC Number"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/startblue"
            android:textStyle="bold"
            android:layout_weight="50"
            />



        <EditText
            android:id="@+id/register_kyc_details_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="KYC Number"
            android:textColor="@color/endblue"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_weight="50"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/register_password_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="520dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleContentDescription="View password"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/startblue"
            android:layout_weight="50">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/register_set_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Set Password"
                android:textColor="@color/endblue"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleContentDescription="View password"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/startblue"
            android:layout_weight="50">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/register_confirm_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm password"
                android:textAlignment="center"
                android:textColor="@color/endblue"
                android:textSize="20sp"
                android:textStyle="italic"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <Button
        android:id="@+id/register_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="585dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttonstyle"
        android:text="Submit"
        android:textColor="#fff" />
</RelativeLayout>